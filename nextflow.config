params {
    repo_url = '<repository-url>'
    output_dir = 'results'
}

process {
    withLabel: 'gpu' {
        executor = 'local'
        queueSize = 1
        memory = '8 GB'
        cpus = 4
        gpu {
            enabled = true
            device = '0'
        }
    }
}

workDir = 'work'

profiles {
    tower {
        process.container = 'cckp-toolkit:latest'
        docker.enabled = true
    }
}