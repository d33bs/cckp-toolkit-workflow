// nf-test configuration file
pipeline {
    name = "CCKP Toolkit"
    script = "main.nf"
    profile = "docker"
}

// Test configuration
test {
    // Directory containing test files
    testDir = "tests"
    
    // Directory containing test fixtures
    fixturesDir = "tests/fixtures"
    
    // Directory containing test results
    resultsDir = "test_results"
    
    // Enable verbose output
    verbose = true
    
    // Enable debug output
    debug = true
} 